<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Label?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.teamsportsdb.ui.ConnectController"
          alignment="CENTER" hgap="10" vgap="15" style="-fx-background-color: #f8f9fa; -fx-border-color: #dcdcdc; -fx-border-width: 2px; -fx-border-radius: 10px; -fx-padding: 20;">

    <TextField fx:id="username" promptText="Database username" GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-font-size: 14px; -fx-background-radius: 5px; -fx-border-color: #ccc; -fx-border-width: 1px;"/>

    <TextField fx:id="password" promptText="Database password" GridPane.rowIndex="1" GridPane.columnIndex="0"
               style="-fx-font-size: 14px; -fx-background-radius: 5px; -fx-border-color: #ccc; -fx-border-width: 1px;"/>

    <Button fx:id="connectButton" text="Connect" defaultButton="true" GridPane.rowIndex="2" GridPane.columnIndex="0"
            onAction="#onConnectButtonAction" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5px; -fx-padding: 5 15; -fx-cursor: hand;"/>

    <Label fx:id="errorMessage" text=" " style="-fx-text-fill: red; -fx-font-size: 14px; -fx-font-weight: bold;"  GridPane.columnIndex="0" GridPane.rowIndex="10"
           visible="false" alignment="CENTER"/>

</GridPane>
